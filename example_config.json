{
  "general": {
    "reverseDns": false,
    "restartOnChange": false,
    "watchedFiles": [
      "config.json",
      "filter.json"
    ],
    "watchInterval": 30
  },
  "filter": {
    "enabled": false,
    "path": "filter.json"
  },
  "sensors": [
    {
      "name": "snort",
      "enabled": false,
      "sensorType": "snort",
      "logSourceType": "file",
      "filePath": "path/to/alertFile",
      "logType": "full",
      "interface": "LAN"
    },
    {
      "name": "suricata",
      "enabled": false,
      "sensorType": "suricata",
      "logSourceType": "file",
      "filePath": "path/to/eve.json",
      "logType": "eve",
      "interface": "WAN"
    },
    {
      "name": "paloalto",
      "enabled": false,
      "sensorType": "paloalto",
      "logSourceType": "http",
      "ip": "",
      "port": 443,
      "apikey": "",
      "logType": "threat",
      "interface": "TAP",
      "pullInterval": 2,
      "nlogs": 20
    }
  ],
  "notify": {
    "enabled": false,
    "notifyOnStartUp": false,
    "blackListedFields": [
      "rev",
      "revision",
      "sid",
      "pri",
      "priority",
      "payload",
      "seqno"
    ],
    "agents": [
      {
        "name": "telegram",
        "enabled": false,
        "token": "TOKEN",
        "chat_id": 99999999
      },
      {
        "name": "discord",
        "enabled": false,
        "webhookUrl": "webhook url",
        "useEmbed": false
      },
      {
        "name": "webhook",
        "enabled": false,
        "url": "webhook url"
      }
    ]
  },
  "logging": {
    "version": 1,
    "formatters": {
      "default": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "datefmt": "%Y:%m:%d %H:%M:%S"
      }
    },
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "formatter": "default",
        "stream": "ext://sys.stdout"
      },
      "file": {
        "class": "logging.handlers.RotatingFileHandler",
        "filename": "alertBot.log",
        "formatter": "default",
        "maxBytes": 3000000,
        "backupCount": 3
      }
    },
    "loggers": {
      "alertBot": {
        "handlers": [
          "console",
          "file"
        ],
        "level": "INFO"
      }
    }
  }
}