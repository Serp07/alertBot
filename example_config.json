{
  "general": {
    "reverseDns": false,
    "restartOnChange": true,
    "watchedFiles": ["config.json", "filter.json"],
    "watchInterval": 5
  },
  "logging": {
    "level": "info",
    "logSize": 3000000,
    "backupCount": 3
  },
  "filter": {
    "enabled": false,
    "path": "filter.json"
  },
  "sensors": {
    "snort": {
      "enabled": false,
      "filePath": "path/to/alertFile",
      "logType": "full",
      "interface": "LAN"
    },
    "suricata": {
      "enabled": true,
      "filePath": "path/to/eve.json",
      "logType": "eve",
      "interface": "WAN"
    }
  },
  "notify": {
    "enabled": true,
    "notifyOnStartUp": true,
    "blackListedFields": ["rev", "revision", "sid", "pri", "priority", "payload"],
    "agents": [
            {
                "name": "telegram",
                "enabled": true,
                "token": "TOKEN",
                "chat_id": 99999999
            },
            {
                "name": "discord",
                "enabled": false,
                "webhookUrl": "webhook url",
                "useEmbed": false
            },
            {
              "name": "webhook",
              "enabled": false,
              "url": "webhook url"
            }
        ]
  },
  "pcapParser": {
    "enabled": false,
    "pcapGenUrl": "pcapGenUrl",
    "pcapDir": "pcapDir"
  }
}